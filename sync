#!/bin/bash
mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

# Initialize local repository
repo init --depth=1 -u https://github.com/PixelPlusUI-Elle/manifest -b eleven

# Sync make sure j = 8
repo sync -c -j8 --force-sync --no-clone-bundle --no-tags

#Trees 
git clone https://github.com/shield44/device_xiaomi_olivewood -b ppui device/xiaomi/olivewood
git clone https://github.com/shield44/vendor_xiaomi_olivewood -b 11 vendor/xiaomi/olivewood
git clone https://github.com/shield44/kernel_xiaomi_olivewood -b eleven kernel/xiaomi/olivewood